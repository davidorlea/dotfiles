[core]
	excludesfile = ~/.gitignore_global
	editor = subl -n -w
[push]
	default = current
	followTags = true
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	br = branch
	cm = commit
	co = checkout
	fa = "!find . -name .git -type d | xargs -n1 -I% git --git-dir=% --work-tree=%/.. fetch -v --all --prune --recurse-submodules"
	last = log -1 HEAD
	mf = merge --no-ff
	pft = push --follow-tags
	st = status
	unstage = reset HEAD --
